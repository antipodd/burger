<h1>Eat-Da-Burger</h1>

<h2>Burgers to Eat</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      <li>
        {{this.id}} {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="1">
          <button type="submit">DEVOUR IT!</button>
        </form>
      </li>
    {{/unless}}
  {{/each}}
</ul>

<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger">Burger to eat:</label>
    <input type="text" id="burger" name="burger_name">
  </div>

  <button type="submit">Submit</button>
</form>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      <li>
        {{this.id}} {{this.burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>